# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Service Configuration
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0
SERVICE_PORT=8001

# Database Configuration
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=
DB_OPTIONS=

# For PostgreSQL (example)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=user_service_db
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# For MySQL (example)
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=user_service_db
# DB_USER=mysql_user
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=3306

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Email Configuration (for email verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# JWT Configuration (if using JWT instead of token auth)
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=86400

# Security Configuration
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/user_service.log

# API Rate Limiting
RATE_LIMIT_ANON=100/hour
RATE_LIMIT_USER=1000/hour

# External Services
NOTIFICATION_SERVICE_URL=http://localhost:8002
ANALYTICS_SERVICE_URL=http://localhost:8003

# Monitoring
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=True

# Development vs Production
ENVIRONMENT=development